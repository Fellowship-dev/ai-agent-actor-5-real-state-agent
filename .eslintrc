{
  "root": false,
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "@apify/eslint-config-ts"
  ],
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2020
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "**/*.d.ts"
  ],
  "rules": {
    "indent": ["error", 2],
    "comma-dangle": ["off", 0],
    "prefer-rest-params": ["off", 0],
    "max-len": ["error", { "ignoreComments": true, "ignoreStrings": true, "ignoreUrls": true, "ignoreTemplateLiterals": true }]
  }
}